<div class="container">
    <div class="row">  
        <div class="col-md-5">
            <div class="side-bar-wrapper">
                <ul class="side-bar-ul">
                    <li>
                        <i class="fas fa-user fa-xs mr-3"></i>
                        <span>PROFILE</span>
                        <ul>
                            <li class="hover-color">Account settings</li>
                        </ul>
                        <svg height="20" width="360">
                            <line x1="0" y1="0" x2="360" y2="0" style="stroke:rgb(105,105,105);stroke-width:1" />
                        </svg> 
                    </li>

                    <li>
                        <img src="/assets/billing.jpeg" alt="someimg" style="height:20px; width: 20px;" class="mr-2" />
                        <span>BILLING</span>
                        <ul>
                            <li class="hover-color">Add a card</li>
                            <li class="hover-color">Choose a plan</li>
                        </ul>   
                    </li>
                </ul>
            </div>     
        </div>

        <div class="col-md-7">
            <div class="update-form-wrapper">
                <div class="form-inner">
                    <%= form_for(@user) do |f| %>
                    <h5 class="form-header">Account Settings</h5>

                    <div class="form-group">
                        <%= f.label :username, "Username:" %>
                        <%= f.text_field :username, placeholder: "username", class: "form-control" %>
                    </div>

                    <div class="form-group">
                        <%= f.label :email, "Email:" %>
                        <%= f.text_field :email, placeholder: "email", class: "form-control" %>
                    </div>

                    <div class="form-group">
                        <%= f.label :password, "Password:" %>
                        <%= f.text_field :password, placeholder: "password", class: "form-control" %>
                    </div>

                    <div class="submit-btn-wrapper">            
                        <%= f.button :submit, class: "submit-btn" do %>
                            <i class="fas fa-redo fa-sm mr-2"></i>Update Profile
                        <% end %>
                        
                        <svg height="49" width="450">
                            <line x1="10" y1="4.2" x2="440" y2="4.2" style="stroke: #36316B;stroke-width:1" />
                            <line x1="20" y1="8.4" x2="430" y2="8.4" style="stroke:#36316B;stroke-width:1" />
                        </svg> 
                    </div> 
                    <% end %>
                </div>
            </div>
        </div>
        
    </div>
</div>